<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:paddingBottom="15dp"
    android:paddingLeft="25dp"
    android:paddingRight="25dp"
    android:paddingTop="15dp">

    <LinearLayout
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_gravity="center">

        <com.example.cookbook01.utils.CircleImageView
            android:id="@+id/iv_item_cook"
            android:layout_width="120dp"
            android:layout_height="120dp"
            app:civ_border_color="@color/gray"
            app:civ_border_width="0dp" />

        <!-- <ImageView
                    android:id="@+id/iv_item_cook"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:padding="2dp"
                    android:src="@mipmap/ic_launcher" />-->
    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_weight="1"
        android:orientation="vertical"
        android:paddingLeft="15dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_item_cook_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="红烧茄子"
                android:textColor="@color/cook_name"
                android:textSize="18sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingTop="6dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="主料: "
                android:textColor="@color/cook_ingredients"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/tv_item_ingredients"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:lines="1"
                android:text="茄子"
                android:textColor="@color/cook_ingredients"
                android:textSize="12sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingTop="3.5dp">

            <!--            <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="辅料: "
                            android:textSize="12sp"
                            android:textColor="@color/cook_ingredients"/>-->

            <TextView
                android:id="@+id/tv_item_burden"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:lineSpacingExtra="3.5dp"
                android:lines="2"
                android:text="酒精"
                android:textColor="@color/cook_ingredients"
                android:textSize="12sp" />
        </LinearLayout>

    </LinearLayout>
</LinearLayout>



